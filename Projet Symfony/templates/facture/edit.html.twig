{% block body %}
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header">
                    <h3 class="mb-0">Edit Facture <b>{{ facture.id }}</b></h3>
                    <p class="text-sm mb-0">
                        Edit information of facture {{ facture.id }}.
                    </p>
                </div>
                <div class="card-body">
                    <form action="" method="post">



                            <div class="form-group">
                                <label>Nom</label>
                                <textarea class="form-control" name="your-desc">{{ facture.materiel.nom}}</textarea>
                            </div>

                        <button class="btn btn-dribbble" type="submit">Update Facture</button>
                    </form>
                    <div class="pt-2">
                        <a href="{{ path('facture_all') }}"> <i class="fas fa-backward"></i> Cancel </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
